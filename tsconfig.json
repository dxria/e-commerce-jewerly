{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components*": ["components/*"],
      "@/shopcomponents*": ["components/shop/*"],
      "@/homecomponents*": ["components/home*"],
      "@/profilecomponents*": ["components/profile*"],
      "@/dbcontent*": ["utils/db-connection.ts"],
      "@/database*": ["utils/database-connection.ts"],
      "@/models*": ["models/*"],
      "@/api*": ["app/api/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
